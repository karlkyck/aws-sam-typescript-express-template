{
  "name": "aws-sam-typescript-template",
  "version": "1.0.0",
  "private": false,
  "license": "MIT",
  "sideEffects": false,
  "scripts": {
    "clean": "rm -rf -v dist/*",
    "lint": "tslint --project tsconfig.json -c tslint.json 'src/**/*.ts'",
    "audit": "npm audit && snyk test",
    "compile": "tsc",
    "test": "jest --ci",
    "copydependencies": "copy-node-modules . dist",
    "build": "run-s clean lint audit compile test copydependencies",
    "awspackage": "aws cloudformation package --template-file sam.yaml --s3-bucket $npm_package_name --output-template-file sam-generated.yaml",
    "awsdeploy": "aws cloudformation deploy --template-file sam-generated.yaml --stack-name $npm_package_name --capabilities CAPABILITY_IAM"
  },
  "dependencies": {},
  "devDependencies": {
    "@types/aws-lambda": "^8.10.11",
    "@types/jest": "^23.3.1",
    "@types/node": "^10.7.1",
    "aws-sdk": "^2.295.0",
    "copy-node-modules": "^1.0.7",
    "jest": "^23.5.0",
    "jest-xml-matcher": "^1.1.1",
    "json-loader": "^0.5.7",
    "npm-run-all": "^4.1.3",
    "snyk": "^1.95.1",
    "ts-jest": "^23.1.3",
    "ts-loader": "^4.5.0",
    "ts-node": "^7.0.1",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.14.0",
    "tslint-config-standard": "^7.1.0",
    "typescript": "^3.0.1",
    "webpack": "^4.18.0",
    "webpack-cli": "^3.1.0"
  },
  "jest": {
    "testEnvironment": "node",
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.+\\.test\\.ts)",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}
