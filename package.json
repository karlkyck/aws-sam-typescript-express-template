{
  "name": "aws-sam-typescript-template",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "lint": "tslint --project tsconfig.json -c tslint.json 'src/**/*.ts'",
    "test": "snyk test && jest --ci",
    "build": "npm run clean $$ npm audit && npm run lint && tsc && npm run test && copy-node-modules . dist",
    "package": "aws cloudformation package --template-file template.yaml --s3-bucket $npm_package_name --output-template-file template-generated.yaml",
    "deploy": "aws cloudformation deploy --template-file template-generated.yaml --stack-name $npm_package_name --capabilities CAPABILITY_IAM",
    "clean": "rm -rf -v dist/*"
  },
  "dependencies": {},
  "devDependencies": {
    "@types/aws-lambda": "^8.10.11",
    "@types/jest": "^23.3.1",
    "@types/node": "^10.7.1",
    "aws-sdk": "^2.295.0",
    "copy-node-modules": "^1.0.7",
    "jest": "^23.5.0",
    "jest-xml-matcher": "^1.1.1",
    "ts-jest": "^23.1.3",
    "ts-loader": "^4.5.0",
    "ts-node": "^7.0.1",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.14.0",
    "tslint-config-standard": "^7.1.0",
    "typescript": "^3.0.1",
    "snyk": "^1.95.1"
  },
  "jest": {
    "testEnvironment": "node",
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.+\\.test\\.ts)",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}